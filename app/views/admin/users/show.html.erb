<div class="container">
  <div class = "row">
    <h1><%= @user.name%>さんページ</h1>
    
  <div class="show_user_name  clearfix">
    <%= link_to "ユーザーリストに戻る", admin_users_path %><br>
    <%= link_to "アカウント編集", edit_admin_user_path %><br>
    <%= link_to 'アカウント削除', admin_user_path(@user), method: :delete, data: { confirm: "本当に#{@user.name}さんを削除しても良いですか?" } %>
  </div>
  </div>
  
  <table class="table table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <td><%= @user.id %></td>
      </tr>
      <tr>
        <th>ユーザー名</th>
        <td><%= @user.name%></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th>タスク数</th>
        <td><%= @user.tasks.count %></td>
      </tr>
      <tr>
        <th>ユーザー管理権限</th>
        <td><%= @user.admin? ? "有り":"無し" %></td>
      </tr>
    </thead>
  </table>
  </div>
  <br>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>タスク名</th>
        <th>内容</th>
        <th>終了期限</th>
        <th>ステータス</th>
        <th>優先順位</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.name %></td>
          <td><%= task.content.truncate(20) %></td>
          <td><%= task.deadline %></td>
          <td><%= task.status %></td>
          <td><%= task.priority %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @tasks %>
</div>

