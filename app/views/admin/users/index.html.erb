<h1>ユーザーリスト</h1>
<br>
<button type="button" class="btn btn-info"><%= link_to 'ユーザー新規作成', new_admin_user_path %></button>
<br>
<br>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>タスク数</th>
      <th>ユーザー管理権限</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, admin_user_path(user.id) %></td>
        <td><%= user.email %></td>
        <td><%= user.tasks.count %></td>
        <td><%= user.admin? ? "有り": "無し" %></td>
        <td><button type="button" class="btn btn-success"><%= link_to '編集', edit_admin_user_path(user) %></button></td>
        <td><button type="button" class="btn btn-warning"><%= link_to '削除', admin_user_path(user), method: :delete, id: "delete_button", data: { confirm: "本当に#{user.name}さんを削除しても良いですか?" } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>