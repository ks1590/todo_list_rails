<%= form_with(model: @task, local:true) do |f| %>
  <% if @task.errors.any? %>
    <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li>・<%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div>
    <%= f.label :タスク名 %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :内容 %>
    <%= f.text_area :content %>
  </div>
  <div>
    <%= f.submit "登録", disable_with: '登録中...' %>
  </div>
<% end %>